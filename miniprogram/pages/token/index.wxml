<!--pages/token/index.wxml-->
<wxs module="util" src="../util.wxs" />
<view class="container">
  <view class="form-group">
    <view class="form-cell">
      <view class="form-cell_title">token</view>
      <input class="form-cell_input" placeholder="请输入token" placeholder-class="form-cell_title-placeholder" bindinput="onTokenInput" value="{{token}}" />
    </view>
  </view>
  <view class="footer">
    <view class="save" bindtap="saveToken">保存</view>
  </view>
</view>
